extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        //- Use interpolation to dynamically add the project title.
        h1 #{project.project_name}

        //- Use interpolation to dynamically add the project description.
        p.lead.text-light
          | #{project.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        //- Loop over the technologies array to dynamically add to page 
        ul
          each tech in project.technologies
            li= tech
          
        a.button.expanded(href=`${project.live_link}` target='_blank') Live Demo
        a.button.expanded(href=`${project.github_link}` target='_blank') GitHub Repo
    
    //- Loop over the image urls array to add the pictures to the page dynamically
    each pic in project.image_urls
      img.image(src=pic)