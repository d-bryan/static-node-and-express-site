extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Project Portfolio

      p.lead.text-light
        | Please see the projects that I have accomplished using various technologies. 
        
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projectData
        .cell
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`${project.main_image}`, alt="")
            h5 #{project.project_name}
      
